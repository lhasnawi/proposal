#ifndef __QUEUEINGLIB_P3DMODDB_H_
#define __QUEUEINGLIB_P3DMODDB_H_

#include <omnetpp.h>
#include <iostream>

namespace queueing {
using namespace std;


class P3DModDB
{


private:
    int moduleID;
    string moduleName;
    int moduleType;
    int contOutputPortID;
  protected:
    virtual void initialize();
    virtual void handleMessage(cMessage *msg);
  public:
      int getContOutputPortId() const;
      void setContOutputPortId(int contOutputPortId);
      int getModuleId() const;
      void setModuleId(int moduleId);
      const string& getModuleName() const;
      void setModuleName(const string& moduleName);
      int getModuleType() const;
      void setModuleType(int moduleType);
      list <P3DModDB> sourceSinkList;
      list <P3DModDB> switchesList;
};

} //namespace

#endif
